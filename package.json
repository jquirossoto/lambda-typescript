{
    "name": "books-service",
    "version": "1.0.0",
    "description": "",
    "main": "app.js",
    "scripts": {
        "prepare": "husky install",
        "postinstall": "cd src/layers/dependencies/nodejs && npm ci",
        "prestart": "npm run build",
        "start": "sam local start-api --debug-port 9999 --env-vars env/local.env.json --docker-network books-service_book-service-network",
        "start:watch": "nodemon --watch \"dist/**\" --exec \"sam local start-api --debug-port 9999 --env-vars env/local.env.json --docker-network books-service_book-service-network\"",
        "prebuild": "npm run build:clean",
        "build": "tsc --project tsconfig.build.json",
        "build:watch": "npm run build -- --watch",
        "build:clean": "rm -rf dist",
        "test": "jest",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose kill",
        "docker:dynamodb:init": "aws dynamodb create-table --cli-input-json file://books.schema.json --endpoint-url http://localhost:8000",
        "cf:stack:deploy": "aws cloudformation deploy --template-file ./cloudformation.yaml --stack-name book-service-cicd --capabilities CAPABILITY_NAMED_IAM --parameter-overrides $(cat .env)",
        "cf:template:validate": "aws cloudformation validate-template --template-body file://cloudformation.yaml"
    },
    "author": "jquirossoto",
    "license": "ISC",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "@types/aws-lambda": "^8.10.92",
        "@types/http-errors": "^1.8.2",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.17",
        "@types/source-map-support": "^0.5.4",
        "@typescript-eslint/parser": "^5.11.0",
        "eslint": "^8.9.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-junit": "^13.0.0",
        "nodemon": "^2.0.15",
        "pretty-quick": "^3.1.3",
        "source-map-support": "^0.5.21",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    }
}
