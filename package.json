{
    "name": "books-service",
    "version": "1.0.0",
    "description": "",
    "main": "app.js",
    "scripts": {
        "prepare": "husky install",
        "postinstall": "cd src/layers/dependencies/nodejs && npm ci",
        "prestart": "npm run build",
        "start": "sam local start-api --docker-network books-service_book-service-network",
        "start:watch": "nodemon --watch \"dist/**\" --exec \"sam local start-api --docker-network books-service_book-service-network\"",
        "prebuild": "npm run build:clean",
        "build": "tsc",
        "build:watch": "npm run build -- --watch",
        "build:clean": "rm -rf dist",
        "test": "echo \"Error: no test specified\" && exit 1",
        "docker:up": "docker-compose -f ./docker-compose.yml up -d",
        "docker:down": "docker-compose kill",
        "docker:dynamodb:init": "aws dynamodb create-table --cli-input-json file://books.schema.json --endpoint-url http://localhost:8000",
        "cf:stack:deploy": "aws cloudformation deploy --template-file ./cloudformation.yaml --stack-name book-service-cicd --capabilities CAPABILITY_NAMED_IAM --parameter-overrides $(cat .env)",
        "cf:template:validate": "aws cloudformation validate-template --template-body file://cloudformation.yaml"
    },
    "author": "jquirossoto",
    "license": "ISC",
    "devDependencies": {
        "@types/aws-lambda": "^8.10.92",
        "@types/node": "^17.0.17",
        "@typescript-eslint/parser": "^5.11.0",
        "eslint": "^8.9.0",
        "husky": "^7.0.4",
        "nodemon": "^2.0.15",
        "pretty-quick": "^3.1.3",
        "ts-node": "^10.5.0",
        "typescript": "^4.5.5"
    }
}
