{
  "name": "books-service",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "postinstall": "cd src/layers/dependencies && npm install",
    "prestart": "npm run build",
    "start": "sam local start-api --docker-network books-service_book-service-network",
    "prebuild": "npm run build:clean",
    "build": "tsc && sam build",
    "build:clean": "rm -rf dist && rm -rf .aws-sam",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:up": "docker-compose -f ./docker-compose.yml up -d",
    "docker:down": "docker-compose kill",
    "docker:dynamodb:init": "aws dynamodb create-table --cli-input-json file://books.schema.json --endpoint-url http://localhost:8000"
  },
  "author": "jquirossoto",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/node": "^17.0.17",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
